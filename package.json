{
  "name": "efficiensee-monorepo",
  "version": "0.1.0",
  "description": "Intelligence platform for data-driven organizations",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "NODE_ENV=development turbo dev",
    "build": "turbo build",
    "start": "turbo start",
    "start:all": "turbo start:all",
    "lint": "turbo lint",
    "format": "biome check --write",
    "format:check": "biome check",
    "test": "vitest run",
    "test:turbo": "turbo test",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "knip": "knip",
    "db:generate": "turbo db:generate",
    "db:pull": "turbo db:pull",
    "db:push": "turbo db:push",
    "db:migrate": "turbo db:migrate",
    "db:studio": "turbo db:studio",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "docker:dev": "docker compose up --build -d",
    "docker:stop": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:clean": "docker compose down -v && rm -rf apps/frontend/docker/postgres/*",
    "prepare": "husky install || true"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@types/bun": "^1.2.10",
    "@types/node": "^22.14.1",
    "@vitest/ui": "^3.2.4",
    "conventional-changelog-cli": "^5.0.0",
    "husky": "^9.0.11",
    "knip": "^5.50.4",
    "turbo": "^2.5.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.1.0"
  },
  "packageManager": "bun@1.2.10",
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_ORG/efficiensee.git"
  },
  "bugs": {
    "url": "https://github.com/YOUR_ORG/efficiensee/issues"
  },
  "homepage": "https://github.com/YOUR_ORG/efficiensee#readme",
  "keywords": [
    "intelligence-platform",
    "engineering-analytics",
    "data-driven",
    "metrics",
    "dashboards",
    "github",
    "jira",
    "ai-powered",
    "nextjs",
    "typescript",
    "postgresql"
  ]
}
